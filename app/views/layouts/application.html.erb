<html>
    <head>
        <title><%= @page_title or "Page Title" %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
        tailwind.config = {
            theme: {
            extend: {
                colors: {
                clifford: '#da373d',
                }
            }
            }
        }
        </script>
        <%= yield :head %>
    </head>
    <body>
        <header>
            <div class="header">
                <div class="container 2xl:container mx-auto">
                    <div class="flex content-center gap-10">
                        <div class="w-40">
                            <img class="object-contain w-full" src="https://placehold.co/1200x400?text=Logo">
                        </div>
                        <div class="md:flex space-x-10">
                            <a href="#home"
                                class="inline-block h-full content-center text-xl border-b-2 font-medium text-gray-500 hover:text-gray-900 transition duration-150 ease-in-out">
                                Home
                            </a>
                            <a href="#create"
                                class="inline-block h-full content-center text-xl font-medium text-gray-500 hover:text-gray-900 transition duration-150 ease-in-out">
                                Create
                            </a>
                        </div>

                        <div class="flex ml-auto items-center gap-2">
                            <div class="relative content-center">
                                <input class="border rounded-3xl py-3 px-3 outline-none text-xs w-[300px] pr-10 hidden lg:block md:block" placeholder="Search ...">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                    stroke="currentColor"
                                    class="w-5 h-5 text-green-900 absolute right-3 top-1/2 transform -translate-y-1/2 hidden lg:block md:block">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                                </svg>
                            </div>
                            <div class="relative">
                                <div class=" h-10 w-10 rounded-full content-center hover:bg-gray-200 transition duration-150">
                                    <span class="img block w-8 h-8 mx-auto cursor-pointer">
                                        <svg width="100%" height="100%" viewBox="0 0 24 24" role="presentation"><path fill="currentColor" fill-rule="evenodd" d="M6.49 17.67a2 2 0 0 0 2.83 0l-2.83-2.83a2 2 0 0 0 0 2.83m4.89-12.19-.72.73c-.78.78-2.21 1.81-3.21 2.31l-3.02 1.51c-.49.25-.58.77-.19 1.17l8.56 8.56c.4.4.92.31 1.17-.19l1.51-3.02c.49-.99 1.53-2.42 2.31-3.21l.73-.73a5.05 5.05 0 0 0 .64-6.36 1.01 1.01 0 1 0-1.35-1.49q-.04.04-.07.08A5.04 5.04 0 0 0 14.95 4a5.04 5.04 0 0 0-3.57 1.48"></path></svg>
                                    </span>
                                </div>
                            </div>
                            <div class="relative">
                                <div class=" h-10 w-10 rounded-full content-center hover:bg-gray-200 transition duration-150">
                                    <span class="img block w-8 h-8 mx-auto cursor-pointer content-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" viewBox="0 0 20 20" version="1.1" class="mx-auto">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <g transform="translate(-420.000000, -2159.000000)" fill="#000000">
                                                    <g transform="translate(56.000000, 160.000000)">
                                                        <path d="M374,2009 C371.794,2009 370,2007.206 370,2005 C370,2002.794 371.794,2001 374,2001 C376.206,2001 378,2002.794 378,2005 C378,2007.206 376.206,2009 374,2009 M377.758,2009.673 C379.124,2008.574 380,2006.89 380,2005 C380,2001.686 377.314,1999 374,1999 C370.686,1999 368,2001.686 368,2005 C368,2006.89 368.876,2008.574 370.242,2009.673 C366.583,2011.048 364,2014.445 364,2019 L366,2019 C366,2014 369.589,2011 374,2011 C378.411,2011 382,2014 382,2019 L384,2019 C384,2014.445 381.417,2011.048 377.758,2009.673"></path>
                                                    </g>
                                                </g>
                                            </g>
                                        </svg> 
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <main>
            <div id="content"><%= content_for?(:content) ? yield(:content) : yield %></div>
        </main>
        
    </body>
</html>